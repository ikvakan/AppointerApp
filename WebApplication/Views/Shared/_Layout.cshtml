<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            crossorigin="anonymous"></script>



</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Appointer app", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["userName"] != null)
                    {
                        <li class="nav-item"><a class="nav-link" style="color:#ffd800">Pozdrav @Session["userName"] !</a> </li>
                        <li>@Html.ActionLink("Moji termini", "GetAll", "Appointment")</li>

                    }

                    @if (Session["userLogin"] != null)
                    {
                        <li>@Html.ActionLink("Rezervacija", "Reservation", "Home")</li>
                        <li>@Html.ActionLink("Moji podaci", "GetAccountData", "ManageAccount")</li>
                    }



                    @*@if (Session["partnerLogin"] != null)
        {
            <li>@Html.ActionLink("Moje tvrtke", "Index", "Home")</li>
        }*@

                    @*registracija*@

                    <li class="nav-item dropdown dropdown-left-manual " id="navbarNavDropdown">
                        <a class="nav-link  dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Registracija
                        </a>
                        <ul class="dropdown-menu  dropdown-left-manual" style="right: 0; left: auto;" aria-labelledby="navbarDropdownMenuLink">
                            <li>@Html.ActionLink("Korisnički račun", "RegisterUser", "Account")</li>
                            <li>@Html.ActionLink("Partnerski račun", "RegisterPartner", "Account")</li>
                            @if (Session["partnerLogin"] != null)
                            {
                                <li>@Html.ActionLink("Registriraj tvrtku", "RegisterFirm", "Account")</li>
                            }
                            <li></li>
                        </ul>
                    </li>

                    @*login*@
                    @if (Session["userName"] == null)
                    {
                        <li>@Html.ActionLink("Prijava", "Login", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Odjava", "LogOut", "Account")</li>

                    }
                    @*@if (Session["userName"] != null)
        {
            <li>@Html.ActionLink("Odjava", "LogOut", "Account")</li>
        }*@
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - OICAR</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
